---
interface Props {
  sectionTitle?: string;
  background?: "white" | "yellow";
  subtitle?: string;
}

const { sectionTitle, background = "white", subtitle } = Astro.props;
---

<section
  class=`${background == "white" ? "bg-white" :"bg-ggyellow-highlight" } py-12 lg:py-16 px-12 lg:px-16 w-full antialiased flex flex-col text-center gap-12`>
  {
    sectionTitle && (
      <h2 class="text-4xl text-ggviolet-primary font-serif font-bold mb-2 mx-4">
        {sectionTitle}
      </h2>
    )
  }
  {
    subtitle && (
      <h3 class="text-lg mb-2 leading-snug text-ggyellow-quarternary mx-4">{subtitle}</h3>
    )
  }
  <div class="flex flex-col lg:flex-row w-full justify-evenly align-middle items-center gap-24">
    <slot />
  </div>
</section>
