---
import Icon from "astro-icon";

interface Props {
  pack: string;
  iconName: string;
  header: string;
}

const { pack, iconName, header } = Astro.props;
---

<li class="flex flex-col lg:flex-row font-lg mb-12 text-lg">
  <div class="mx-auto lg:mx-0 my-4 lg:my-auto lg:mr-8 p-3 bg-ggviolet-primary rounded-full text-ggyellow-secondary h-fit w-fit">
    <Icon pack={pack} name={iconName} class="h-10" />
  </div>
  <div class="flex flex-col max-w-lg">
    <span class="font-bold">{header}</span>
    <p>
      <slot />
    </p>
  </div>
</li>
