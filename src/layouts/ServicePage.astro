---
import { useSanityClient } from "@sanity/astro";
import "@fontsource/inika/400.css";
import "@fontsource/inika/700.css";
import BasicSection from "../components/BasicSection.astro";
import CenteredSection from "../components/CenteredSection.astro";
import Step from "../components/Step.astro";
import BaseLayout from "./BaseLayout.astro";

import { Image } from "astro:assets";
import ColumnSection from "../components/ColumnSection.astro";

interface Props {
  hero: {
    title: string;
    subtitle: string;
    desc: string;
    cta: string;
  };
  ggdiff: {
    sectionHeader: string;
    blocks: [string, string][];
  };
}

const { hero, ggdiff } = Astro.props;
---

<BaseLayout heroBackgroundOverride navVariant="default">
  <div slot="hero" class="text-5xl lg:text-6xl lg:max-w-5xl">
    <h2 class="font-serif font-semibold antialiased leading-tight">{hero.title}</h2>
    <h3
      class="text-xl lg:text-2xl font-serif font-normal antialiased leading-tight text-ggviolet-highlight mb-2">
      {hero.subtitle}
    </h3>
    <p class="text-lg lg:text-xl mx-auto max-w-2xl lg:max-w-4xl text-center lg:px-4">
      {hero.desc}
    </p>

    <a
      href="/contact"
      class="px-8 py-1.5 border-2 border-ggyellow-secondary bg-ggyellow-highlight rounded-xl text-black font-serif text-lg font-bold antialiased"
      >{hero.cta}</a
    >
  </div>

  <div class="">
    <h2 class="w-full text-2xl lg:text-4xl text-center my-12">
      <span class="font-bold font-serif underline">The GG Difference:</span>{
        " " + ggdiff.sectionHeader
      }
    </h2>
    <div
      class="mx-auto flex flex-col lg:flex-wrap lg:flex-row w-3/4 justify-center lg:justify-evenly lg:align-middle lg:items-stretch gap-8">
      {
        ggdiff.blocks.map((elem) => {
          return (
            <div class=" bg-neutral-50 text-center lg:text-left py-12 px-8 rounded-3xl lg:grow lg:shrink lg:basis-0 mx-auto">
              <h3 class="text-2xl lg:text-3xl text-ggviolet-primary font-serif antialiased">{elem[0]}</h3>
              <p class="lg:max-w-lg">{elem[1]}</p>
            </div>
          );
        })
      }
    </div>
  </div>
</BaseLayout>

