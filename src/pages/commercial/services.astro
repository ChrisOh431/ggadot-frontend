---
import { useSanityClient } from "@sanity/astro";
import "@fontsource/inika/400.css";
import "@fontsource/inika/700.css";

import BasicSection from "../../components/BasicSection.astro";
import NavBar from "../../components/NavBar.astro";
import LinkButton from "../../components/LinkButton.astro";
import BigFooter from "../../components/BigFooter.astro";
import HeroSection from "../../components/HeroSection.astro";
import SectionButton from "../../components/SectionButton.astro";

import Icon from "astro-icon";

import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";

import sideBySide from "../../images/illust/side-by-side.svg";
import twoPeopleChart from "../../images/illust/two-ppl-chart.svg";
import girlDrawing from "../../images/illust/girl-drawing.svg";

import CenteredSection from "../../components/CenteredSection.astro";
import ColumnSection from "../../components/ColumnSection.astro";
---

<BaseLayout heroBackgroundOverride={true}>
  <div slot="hero" class="-my-4 text-3xl lg:text-5xl max-w-full lg:max-w-6xl">
    <h2 class="font-serif font-semibold antialiased leading-snug">
      You have <span class="underline underline-offset-[6px] decoration-ggviolet-highlight">eight seconds</span> to grab
      their attention.
    </h2>
    <h3 class="font-serif font-normal antialiased text-3xl mb-3">
      Luckily, we make people interested.
      <br />
      <span class="text-ggviolet-highlight text-xl font-normal antialiased"
        >We don't just create art, we create brands.</span
      >
    </h3>

    <a
      href="/contact"
      class="px-8 py-1.5 border-2 border-ggyellow-secondary bg-ggyellow-highlight rounded-xl text-black font-serif text-lg font-bold antialiased"
      >Get a Quote</a
    >
  </div>

  <ColumnSection sectionTitle="What We Offer">
    <div class="flex flex-col text-lg text-ggviolet-primary font-bold text-center mx-10">
      <Icon
        pack="ic"
        name="baseline-speed"
        class="mx-auto w-20 text-yellow-500 opacity-60"
      />
       Quick turnaround services
      <span class="text-base font-normal"
        >Hot-Requests. Still 100% original & 100% yours.</span
      >
    </div>
    <div class="flex flex-col text-lg text-ggviolet-primary font-bold text-center mx-10">
      <Icon
        pack="ic"
        name="baseline-credit-score"
        class="mx-auto w-20 text-yellow-500 opacity-60"
      />
       Secure & Easy Payment
      <span class="text-base font-normal">Minimized payment terms, minimized risk.</span>
    </div>
    <div class="flex flex-col text-lg text-ggviolet-primary font-bold text-center mx-10">
      <Icon
        pack="ic"
        name="baseline-people-outline"
        class="mx-auto w-20 text-yellow-500 opacity-60"
      />
       Direct Artist Communication
      <span class="text-base font-normal"
        >No middle-man between clients and the artist.</span
      >
    </div>
  </ColumnSection>

  <BasicSection
    background="yellow"
    sectionTitle="Business Bespoke"
    subtitle="In a Digital World That Never Sleeps, Your Brand's Evolution Should Be Tireless."
    reversed>
    <p class="text-lg max-w-[32rem]">
      Yet, maintaining in-house design teams can bleed your budget dry, and
      non-professional designs are never getting the results you hope. Enter Business
      Bespoke, a tailor-made subscription service crafted to fit your company like a
      bespoke suit.
    </p>
    <div class="mt-4 w-full flex flex-col items-center lg:flex-row gap-4">
      <SectionButton destination="/commercial/businessbespoke">Build Your Brand</SectionButton>
    </div>
    <Image
      src={twoPeopleChart}
      alt="2 people admiring a positive line graph."
      slot="content"
      class="w-full h-full max-w-md"
    />
  </BasicSection>

  <BasicSection
    sectionTitle="Digital Design & Artistry"
    subtitle="Explore your options without commitment. Get a free quote.">
    <p class="text-lg max-w-[32rem]">
      Yet, maintaining in-house design teams can bleed your budget dry, and
      non-professional designs are never getting the results you hope. Enter Business
      Bespoke, a tailor-made subscription service crafted to fit your company like a
      bespoke suit.
    </p>
    <div class="mt-4 w-full flex flex-col items-center lg:flex-row gap-4">
      <SectionButton destination="/commercial/digital-design">Learn More</SectionButton>
    </div>
    <Image
      src={girlDrawing}
      alt="A girl drawing on a digital tablet"
      slot="content"
      class="w-full h-full max-w-md"
    />
  </BasicSection>
</BaseLayout>

